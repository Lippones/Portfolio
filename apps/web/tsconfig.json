{
  "extends": "@lippe/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@server/*": [
        "./server/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    ".next/types",
    ".next/types/**/*.ts",
    "src/context/i18n.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}